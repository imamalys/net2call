<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintHeight_percent="0.40"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo_icon"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/blue_color"
            android:padding="10dp"
            android:layout_marginHorizontal="40dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_call_info"
                android:gravity="center"
                android:visibility="gone"
                android:textSize="22sp"
                android:textColor="@color/blue_color"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_caller_id"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/white"/>
            <Chronometer
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_time"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_call_hold"
            android:layout_marginTop="20dp"
            android:text="Call Hold"
            android:visibility="gone"
            android:gravity="center"
            android:textSize="26sp"
            android:textColor="@color/red_color_80"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ll_top"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="40dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/iv_mic"
                android:padding="5dp"
                app:tint="@color/blue_color"
                android:src="@drawable/mute_icon" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:visibility="gone"
                android:id="@+id/iv_pause"
                android:src="@drawable/pause_icon"
                app:tint="@color/blue_color"
                android:layout_marginStart="20dp"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rl_speaker"
            app:layout_constraintTop_toTopOf="@+id/iv_end_call"
            app:layout_constraintBottom_toBottomOf="@id/iv_end_call"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_end_call">
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:visibility="gone"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/bluetooh_icon"
                    android:layout_centerVertical="true"
                    app:tint="@color/blue_color" />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/down_arrow_icon"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:tint="@color/blue_color"/>
            </RelativeLayout>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:id="@+id/iv_speaker"
                android:visibility="visible"
                android:src="@drawable/speaker_icon"
                app:tint="@color/blue_color" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_end_call"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/end_call_icon" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:id="@+id/iv_numpad"
            android:src="@drawable/numpad"
            app:layout_constraintTop_toTopOf="@+id/iv_end_call"
            app:layout_constraintBottom_toBottomOf="@id/iv_end_call"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_end_call"
            app:tint="@color/blue_color" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>