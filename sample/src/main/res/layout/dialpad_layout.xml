<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/tv_number"
            app:layout_constraintTop_toTopOf="parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/tv_1"
                    android:background="@drawable/circle_pad"
                    android:text="1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_2"
                    android:gravity="center"
                    android:textSize="28sp"/>
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/tv_2"
                    android:background="@drawable/circle_pad"
                    android:text="2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center"
                    android:textSize="28sp"/>
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/tv_3"
                    android:background="@drawable/circle_pad"
                    android:text="3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center"
                    android:textSize="28sp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/tv_4"
                    android:background="@drawable/circle_pad"
                    android:text="4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_5"
                    android:gravity="center"
                    android:textSize="28sp"/>
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/tv_5"
                    android:background="@drawable/circle_pad"
                    android:text="5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center"
                    android:textSize="28sp"/>
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/tv_6"
                    android:background="@drawable/circle_pad"
                    android:text="6"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_5"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center"
                    android:textSize="28sp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/tv_7"
                    android:background="@drawable/circle_pad"
                    android:text="7"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_8"
                    android:gravity="center"
                    android:textSize="28sp"/>
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/tv_8"
                    android:background="@drawable/circle_pad"
                    android:text="8"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center"
                    android:textSize="28sp"/>
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/tv_9"
                    android:background="@drawable/circle_pad"
                    android:text="9"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_8"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center"
                    android:textSize="28sp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/tv_asterisk"
                    android:background="@drawable/circle_pad"
                    android:text="*"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_0"
                    android:gravity="center"
                    android:textSize="28sp"/>
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/tv_0"
                    android:background="@drawable/circle_pad"
                    android:text="0"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center"
                    android:textSize="28sp"/>
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/tv_hashtag"
                    android:background="@drawable/circle_pad"
                    android:text="#"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_0"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center"
                    android:textSize="28sp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/iv_call"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_gravity="center"
                android:src="@drawable/call_icon"/>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="15dp"
                android:id="@+id/iv_correction"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_call"
                android:layout_marginStart="30dp"
                android:layout_gravity="center"
                android:src="@drawable/erase_pad"
                app:tint="@color/red_color" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>